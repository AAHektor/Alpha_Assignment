@model EditProjectViewModel

<section id="edit-project-modal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Edit Project</h3>
            <button type="button" class="btn-close" data-type="close" data-target="#edit-project-modal"></button>
        </div>
        <div class="card-body">
            <form id="edit-project-form" asp-controller="Projects" asp-action="Update" method="post" novalidate>
                    <div class="image-preview-container">
                        <img src="/images/add-project-logo.svg" alt="">
                    </div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label class="form-label">Project Name</label>
                    <input class="form-input" asp-for="ProjectName" placeholder="Project Name" />
                </div>

                <div class="form-group">
                    <label class="form-label">Client</label>
                    <input class="form-input" name="ClientName" value="@Model.ClientName" placeholder="Enter client name" />
                </div>



                <div class="form-group">
                    <label class="form-label">Description</label>
                    <textarea asp-for="Description" id="edit-project-description" class="hide-textarea"></textarea>

                    <div id="edit-project-description-wysiwyg-editor"
                         class="wysiwyg-editor"
                         data-quill-editor="edit-project-description-wysiwyg-editor"
                         data-quill-toolbar="edit-project-description-wysiwyg-toolbar"
                         data-quill-target="edit-project-description">
                    </div>

                    <div id="edit-project-description-wysiwyg-toolbar" class="wysiwyg-toolbar">
                        <span class="ql-formats">
                            <button class="ql-bold"></button>
                            <button class="ql-italic"></button>
                            <button class="ql-underline"></button>
                        </span>
                        <span class="ql-formats">
                            <button class="ql-align" value=""></button>
                            <button class="ql-align" value="center"></button>
                            <button class="ql-align" value="right"></button>
                        </span>
                        <span class="ql-formats">
                            <button class="ql-list" value="bullet"></button>
                            <button class="ql-list" value="ordered"></button>
                        </span>
                        <span class="ql-formats">
                            <button class="ql-link"></button>
                        </span>
                    </div>
                </div>

                <div class="form-horizontal-group">
                    <div class="form-group">
                        <label class="form-label">Start Date</label>
                        <input class="form-input" asp-for="StartDate" type="date" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">End Date</label>
                        <input class="form-input" asp-for="EndDate" type="date" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Budget</label>
                    <div class="form-input-extended">
                        <i class="fa-solid fa-dollar-sign"></i>
                        <input class="form-input" asp-for="Budget" type="number" placeholder="0" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Status</label>
                    <select class="form-input" asp-for="StatusId">
                        <option value="1">Started</option>
                        <option value="2">Completed</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-blue">Save</button>
            </form>
        </div>
    </div>
</section>
