@model SignInViewModel

@{
    Layout = "_CenterWrapperLayout";
    ViewData["Title"] = "Login";
}

<section id="login">
    <div class="card">
        <div class="card-header">
            <h1>Login</h1>
        </div>
        <div class="card-body">
            <form id="signin-form" method="post" asp-controller="Auth" asp-action="SignIn" novalidate>
                <div class="form-group">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-input" asp-for="Email" type="email" id="email" />
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-input" asp-for="Password" type="password" id="password" />
                </div>

                <div class="form-checkbox-group">
                    <label class="form-checkbox">
                        <input asp-for="RememberMe" class="form-checkbox-input" type="checkbox">
                        <span class="form-checkbox-box"></span>
                    </label>
                    <label asp-for="RememberMe" class="form-label">Remember Me</label>
                </div>

                <button type="submit" class="btn btn-blue" id="login-account-btn">Log In</button>
            </form>
        </div>

        <div class="card-footer">
            Don't have an account? <a asp-controller="Auth" asp-action="SignUp">Sign up</a>
        </div>
    </div>
</section>
