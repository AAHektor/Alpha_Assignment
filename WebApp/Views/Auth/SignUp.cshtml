@model SignUpViewModel

@{
    Layout = "_CenterWrapperLayout";
    ViewData["Title"] = "Create Account";
}



<section id="signup">
    <div class="card">
        <div class="card-header"><h1>@ViewData["Title"]</h1></div>
        <div class="card-body">

            <form id="signup-form" method="post" asp-controller="Auth" asp-action="SignUp" novalidate>
                <div class="form-group">
                    <label class="form-label" asp-for="FullName"></label>
                    <input class="form-input" asp-for="FullName" id="fullname">
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-input" asp-for="Email" id="email" type="email">
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-input" asp-for="Password" id="password" type="password">
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="ConfirmPassword"></label>
                    <input class="form-input" asp-for="ConfirmPassword" id="confirmPassword" type="password">
                </div>
                <div class="form-checkbox-group">
                    <label class="form-checkbox">
                            <input asp-for="Terms" id="terms" type="checkbox" class="form-checkbox-input">
                            <span class="form-checkbox-box"></span>
                    </label>
                        <label asp-for="Terms" class="form-label">I accept <a href="#">Terms and Conditions</a></label>
                </div>
                <div id="terms-error-container"></div>

                <button type="submit" class="btn btn-blue create-account-btn" id="create-account-btn">Create Account</button>

            </form>

        </div>
        <div class="card-footer">
            Already have an account? <a asp-controller="Auth" asp-action="SignIn">Log in</a>
        </div>
    </div>
</section>


